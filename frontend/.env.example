# SentinelFlow Frontend Environment Configuration
# Copy this file to .env.local and update values as needed

# Backend API URL (REST endpoints)
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# WebSocket Server URL (real-time updates)
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Demo Mode (set to 'true' to enable demo mode by default)
NEXT_PUBLIC_DEMO_MODE=true
